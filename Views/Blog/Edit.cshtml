@model CRUD.Blog.Models.Blog
<form method="post" action="/Blog/AddOrEdite">
    <input type="hidden" class="form-control" asp-for="Id" name="Id" placeholder="ایدی خبر ">
    <div class="mb-3">
        <label class="form-label">عنوان</label>
        <input type="text" class="form-control" required asp-for="Title" name="Title" placeholder="عنوان خبر را وارد کنید">
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">توضیحات مختصر</label>
        <input type="text" class="form-control" required asp-for="ShoetDes" name="ShoetDes" placeholder="توضیحات مختصر خبر را وارد کنید">
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" required class="form-label">توضیحات</label>
        <textarea name="Des" asp-for="Des" class="form-control" cols="30" rows="10"></textarea>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-warning">ویرایش</button>
        <a href="/Blog" class="btn btn-info">بازگشت به لیست</a>
    </div>
</form>